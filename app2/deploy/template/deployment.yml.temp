apiVersion: apps/v1
kind: Deployment
metadata:
  name: app2
spec:
  replicas: 2
  selector:
    matchLabels:
      app: app2
  template:
    metadata:
      labels:
        app: app2
    spec:
      containers:
        - name: app2
          image: shihab24/app2:{{IMAGE_TAG}}
          imagePullPolicy: Always
          ports:
            - containerPort: 8000